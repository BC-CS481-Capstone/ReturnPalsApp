<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Theme.ReturnPalsSplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#E1F6FF</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splashicon_288x288</item>
        <item name="postSplashScreenTheme">@style/Theme.ReturnPals</item>
    </style>



    // Navigation Drawer Theme
    <style name="Theme.Nav" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Nav.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ReturnPals.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ReturnPals.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>